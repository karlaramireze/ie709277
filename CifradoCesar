//CIFRADO CESAR//

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
	int a,i;
	scanf("%d",&a);
	char s[50];
	scanf("%s",s);

	for (i=0 ; i<strlen(s) ; i++){
		if ((s[i]>=97 && s[i]<=122) || (s[i]>=65 && s[i]<=90))
			s[i]+=a;
	}

	printf("%s",s);

	return EXIT_SUCCESS;
}
